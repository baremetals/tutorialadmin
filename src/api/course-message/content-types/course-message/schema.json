{
  "kind": "collectionType",
  "collectionName": "course_messages",
  "info": {
    "singularName": "course-message",
    "pluralName": "course-messages",
    "displayName": "courseMessage",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "message": {
      "type": "richtext"
    },
    "course": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::course.course"
    },
    "hasRead": {
      "type": "json"
    },
    "student": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "allRead": {
      "type": "boolean",
      "default": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "text",
        "file"
      ],
      "default": "text"
    },
    "file": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
